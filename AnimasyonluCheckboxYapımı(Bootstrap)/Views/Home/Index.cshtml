
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/animated-checkbox.css" rel="stylesheet" />
</head>
<body>

    <div class="container"> 
        <div class="row">
            <div class="col-md-12">
                <h2>Animated Radios & Checkboxes With NoJS</h2>
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="col-md-2 control-label">Ödeme Durumu: </label>
                        <div class="col-md-10 checkbox">
                            <label>
                                @Html.CheckBox("odendimi", false)

                                <span class="cr">
                                    <i class="cr-icon glyphicon glyphicon-ok"></i>
                                </span>
                            </label>
                            <span> Ödendi mi?</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Alındı Durumu: </label>
                        <div class="col-md-10 checkbox">
                            <label>
                                @Html.CheckBox("alindimi", false)
                                <span class="cr">
                                    <i class="cr-icon glyphicon glyphicon-ok"></i>
                                </span>
                            </label>
                                <span> Alındı mı?</span>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Kargo Durumu: </label>
                        <div class="col-md-10 checkbox">
                            <label>
                                @Html.CheckBox("gonderildimi", false)
                                <span class="cr">
                                    <i class="cr-icon glyphicon glyphicon-ok"></i>
                                </span>
                            </label>
                            <span> Gönderildi mi?</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</body>
</html>
